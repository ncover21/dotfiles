#!/bin/bash

copy() {
    pbcopy < $1
}

cl() { cd "$@" && ls -la; }


uzrm(){
    unzip "$@" && rm "$@";
}

rmd () {
  pandoc $1 | lynx -stdin
}

rpdf(){
    pandoc $1 --pdf-engine=xelatex -o $2
}

# `o` with no arguments opens the current directory, otherwise opens the given
# location
function o() {
	if [ $# -eq 0 ]; then
		open .;
	else
		open "$@";
	fi;
}

activate_virtualenv() {
    if [ -f env/bin/activate ]; then . env/bin/activate;
    elif [ -f ../env/bin/activate ]; then . ../env/bin/activate;
    elif [ -f ../../env/bin/activate ]; then . ../../env/bin/activate;
    elif [ -f ../../../env/bin/activate ]; then . ../../../env/bin/activate;
    fi
}
